{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "UseCodeBasedConfig": "true",
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/auth"
          }
        ]
      }

    },
    "Clusters": {
      "authCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "authCluster/destination1": {
            "Address": "https://localhost:5135" // just for test (insert url address from docker)
          }
        }
      }
    }
  }
}